{
  "name": "NT/base-build-xml",
  "description": "A base Ant build config to build and test Drupal code.",
  "license": "GPL",
  "keywords": [ "ant", "build", "php", "Drupal" ],
  "require": {
    "NT/drupal-phpunit":               "dev-master",
    "andreas-weber/php-junit-merge":   "^1.0@stable",
    "behat/behat":                     "^2.5@stable",
    "cweagans/composer-patches":       "^1.6@stable",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.4",
    "drupal/coder":                    "^8.2@stable",
    "drush/drush":                     "^8.1@stable",
    "jakub-onderka/php-parallel-lint": "^1.0@stable",
    "pdepend/pdepend":                 "^2.5@stable",
    "pheromone/phpcs-security-audit":  "^1.0@stable",
    "phploc/phploc":                   "^4.0@stable",
    "phpmd/phpmd":                     "^2.6@stable",
    "phpunit/phpcov":                  "^4.0@stable",
    "phpunit/phpunit":                 "^6.5@stable",
    "phpunit/phpunit-selenium":        "^4.1@stable",
    "sebastian/phpcpd":                "^3.0@stable",
    "squizlabs/php_codesniffer":       "^2.9@stable",
    "vipsoft/code-coverage-extension": "^2.5@stable"
  },
  "minimum-stability": "dev",
  "config": {
    "bin-dir": "vendor/bin"
  },
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/National-Theatre/drupal-phpunit.git"
    },
    {
      "type": "git",
      "url": "https://github.com/National-Theatre/GuzzleHttpMock.git"
    }
  ]
}
